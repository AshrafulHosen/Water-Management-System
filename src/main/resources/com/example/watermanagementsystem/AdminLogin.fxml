<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: white; -fx-padding: 30;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.watermanagementsystem.controllers.AdminLoginController">
    <children>
        <Label text="Water Management System">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Label text="Admin Login">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <VBox spacing="10.0">
            <children>
                <Label text="Admin Username" />
                <TextField fx:id="usernameField" promptText="Enter admin username" />
                <Label text="Admin Password" />
                <PasswordField fx:id="passwordField" promptText="Enter admin password" />
                <Label fx:id="messageLabel" textFill="RED" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
        <Button mnemonicParsing="false" onAction="#handleAdminLogin" prefWidth="150.0" style="-fx-background-color: #d9534f; -fx-text-fill: white;" text="Login">
            <font>
                <Font size="14.0" />
            </font>
        </Button>
        <Button mnemonicParsing="false" onAction="#handleBackToMainLogin" style="-fx-background-color: transparent; -fx-text-fill: #007bff;" text="&lt; Back to User Login" />
    </children>
</VBox>
