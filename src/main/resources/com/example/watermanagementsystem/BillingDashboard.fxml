<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="900.0" style="-fx-background-color: #1e1e1e;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.watermanagementsystem.controllers.BillingController">
    <children>
        <VBox prefHeight="650.0" prefWidth="900.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <!-- Header -->
                <HBox alignment="CENTER_LEFT" prefHeight="50.0" style="-fx-background-color: #1f3a5f;">
                    <children>
                        <FontAwesomeIconView fill="WHITE" glyphName="MONEY" size="20">
                            <HBox.margin>
                                <Insets left="20.0" />
                            </HBox.margin>
                        </FontAwesomeIconView>
                        <Label style="-fx-text-fill: #e0e0e0;" text="Billing &amp; Payments">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                            <HBox.margin>
                                <Insets left="10.0" />
                            </HBox.margin>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button mnemonicParsing="false" onAction="#handleBackToDashboard" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8;" text="Back to Dashboard">
                            <graphic>
                                <FontAwesomeIconView fill="WHITE" glyphName="ARROW_LEFT" size="14" />
                            </graphic>
                            <HBox.margin>
                                <Insets right="20.0" />
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>

                <!-- Main Content -->
                <HBox spacing="15.0" VBox.vgrow="ALWAYS" style="-fx-padding: 15;">
                    <children>
                        <!-- Left Panel - Generate Bill & Stats -->
                        <VBox prefWidth="280.0" spacing="15.0" style="-fx-background-color: #2a2a2a; -fx-padding: 15; -fx-background-radius: 10;">
                            <children>
                                <!-- Stats Cards -->
                                <VBox spacing="10.0">
                                    <children>
                                        <Label text="Overview" style="-fx-text-fill: #4fc3f7; -fx-font-weight: bold;">
                                            <font>
                                                <Font size="16.0" />
                                            </font>
                                        </Label>

                                        <!-- Total Revenue -->
                                        <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #198754; -fx-padding: 15; -fx-background-radius: 8;">
                                            <children>
                                                <FontAwesomeIconView fill="WHITE" glyphName="DOLLAR" size="24" />
                                                <VBox>
                                                    <children>
                                                        <Label text="Total Revenue" style="-fx-text-fill: #b0f0b0; -fx-font-size: 11;" />
                                                        <Label fx:id="totalRevenueLabel" text="0.00" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 18;" />
                                                    </children>
                                                </VBox>
                                            </children>
                                        </HBox>

                                        <!-- Pending Bills -->
                                        <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #ffc107; -fx-padding: 15; -fx-background-radius: 8;">
                                            <children>
                                                <FontAwesomeIconView glyphName="CLOCK_O" size="24" />
                                                <VBox>
                                                    <children>
                                                        <Label text="Pending Bills" style="-fx-text-fill: #555; -fx-font-size: 11;" />
                                                        <Label fx:id="pendingBillsLabel" text="0" style="-fx-text-fill: #333; -fx-font-weight: bold; -fx-font-size: 18;" />
                                                    </children>
                                                </VBox>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>

                                <!-- Generate Bill Section -->
                                <VBox spacing="10.0" style="-fx-padding: 10 0 0 0;">
                                    <children>
                                        <Label text="Generate New Bill" style="-fx-text-fill: #4fc3f7; -fx-font-weight: bold;">
                                            <font>
                                                <Font size="14.0" />
                                            </font>
                                        </Label>

                                        <VBox spacing="5.0">
                                            <children>
                                                <Label text="Select User:" style="-fx-text-fill: #e0e0e0; -fx-font-size: 12;" />
                                                <ComboBox fx:id="userComboBox" prefWidth="250.0" promptText="Select a user" style="-fx-background-color: #3a3a3a;" />
                                            </children>
                                        </VBox>

                                        <VBox spacing="5.0">
                                            <children>
                                                <Label text="Billing Period:" style="-fx-text-fill: #e0e0e0; -fx-font-size: 12;" />
                                                <ComboBox fx:id="billingPeriodCombo" prefWidth="250.0" promptText="Select period" style="-fx-background-color: #3a3a3a;" />
                                            </children>
                                        </VBox>

                                        <Button mnemonicParsing="false" onAction="#handleGenerateBill" prefWidth="250.0" style="-fx-background-color: #0d6efd; -fx-text-fill: white; -fx-padding: 10; -fx-font-weight: bold; -fx-cursor: hand;" text="Generate Bill">
                                            <graphic>
                                                <FontAwesomeIconView fill="WHITE" glyphName="FILE_TEXT" size="14" />
                                            </graphic>
                                        </Button>

                                        <Label fx:id="messageLabel" style="-fx-text-fill: #b0b0b0;" wrapText="true" />
                                    </children>
                                </VBox>

                                <!-- Rate Info -->
                                <VBox spacing="5.0" style="-fx-background-color: #3a3a3a; -fx-padding: 10; -fx-background-radius: 5;">
                                    <children>
                                        <Label text="Billing Rates" style="-fx-text-fill: #4fc3f7; -fx-font-weight: bold; -fx-font-size: 12;" />
                                        <Label text="Rate per Liter: $0.05" style="-fx-text-fill: #b0b0b0; -fx-font-size: 11;" />
                                        <Label text="Service Charge: $5.00" style="-fx-text-fill: #b0b0b0; -fx-font-size: 11;" />
                                    </children>
                                </VBox>
                            </children>
                        </VBox>

                        <!-- Right Panel - Bills List -->
                        <VBox spacing="10.0" style="-fx-background-color: #2a2a2a; -fx-padding: 15; -fx-background-radius: 10;" HBox.hgrow="ALWAYS">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <FontAwesomeIconView fill="#4fc3f7" glyphName="LIST_ALT" size="18" />
                                        <Label text="All Bills" style="-fx-text-fill: #e0e0e0; -fx-font-weight: bold;">
                                            <font>
                                                <Font size="16.0" />
                                            </font>
                                        </Label>
                                        <Region HBox.hgrow="ALWAYS" />
                                        <Button mnemonicParsing="false" onAction="#handleRefreshBills" style="-fx-background-color: #0d6efd; -fx-text-fill: white; -fx-padding: 5 15; -fx-cursor: hand;" text="Refresh">
                                            <graphic>
                                                <FontAwesomeIconView fill="WHITE" glyphName="REFRESH" size="12" />
                                            </graphic>
                                        </Button>
                                    </children>
                                </HBox>

                                <!-- Search Bar -->
                                <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #3a3a3a; -fx-padding: 8; -fx-background-radius: 5;">
                                    <children>
                                        <FontAwesomeIconView fill="#888888" glyphName="SEARCH" size="14" />
                                        <TextField fx:id="searchField" promptText="Search by username..." style="-fx-background-color: #2a2a2a; -fx-text-fill: #e0e0e0; -fx-prompt-text-fill: #888888;" HBox.hgrow="ALWAYS" onKeyReleased="#handleSearch" />
                                        <ComboBox fx:id="statusFilterCombo" prefWidth="120.0" promptText="All Status" style="-fx-background-color: #2a2a2a;" onAction="#handleFilterByStatus" />
                                    </children>
                                </HBox>

                                <!-- Bills Cards -->
                                <ScrollPane fitToWidth="true" style="-fx-background: #2a2a2a; -fx-background-color: #2a2a2a;" VBox.vgrow="ALWAYS">
                                    <content>
                                        <FlowPane fx:id="billsFlowPane" hgap="10.0" vgap="10.0" style="-fx-padding: 5; -fx-background-color: #2a2a2a;" />
                                    </content>
                                </ScrollPane>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>

