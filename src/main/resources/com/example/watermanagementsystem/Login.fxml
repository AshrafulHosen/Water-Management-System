<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="424.8" prefWidth="500.0" spacing="20.0" style="-fx-background-color: white; -fx-padding: 30;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.watermanagementsystem.controllers.LoginController">
    <children>
        <Label text="Water Management System">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Label text="Login or Create Account">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <VBox spacing="10.0">
            <children>
                <Label text="Username" />
                <TextField fx:id="usernameField" promptText="Enter username" />
                <Label text="Password" />
                <PasswordField fx:id="passwordField" promptText="Enter password" />
                <Label fx:id="messageLabel" textFill="RED" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <Button mnemonicParsing="false" onAction="#handleUserLoginButton" prefWidth="130.0" style="-fx-background-color: #007bff; -fx-text-fill: white;" text="User Login">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#handleAdminLoginButton" prefWidth="130.0" style="-fx-background-color: #d9534f; -fx-text-fill: white;" text="Admin Login">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#handleCreateAccountButton" prefWidth="130.0" style="-fx-background-color: #28a745; -fx-text-fill: white;" text="Create Account">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
            </children>
        </HBox>
    </children>
</VBox>
