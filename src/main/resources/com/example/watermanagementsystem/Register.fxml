<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="424.8" prefWidth="500.0" spacing="20.0" style="-fx-background-color: white; -fx-padding: 30;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.watermanagementsystem.controllers.RegisterController">
    <children>
        <Label text="Water Management System">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Label text="New User Registration">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <VBox spacing="10.0">
            <children>
                <Label text="Choose Username" />
                <TextField fx:id="usernameField" promptText="Enter desired username" />
                <Label text="Choose Password" />
                <PasswordField fx:id="passwordField" promptText="Enter secure password" />
                <Label fx:id="messageLabel" textFill="RED" wrapText="true" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
        <Button mnemonicParsing="false" onAction="#handleRegisterButton" prefWidth="150.0" style="-fx-background-color: #28a745; -fx-text-fill: white;" text="Create Account">
            <font>
                <Font size="14.0" />
            </font>
        </Button>
        <Button mnemonicParsing="false" onAction="#handleBackToMainLogin" style="-fx-background-color: transparent; -fx-text-fill: #007bff;" text="&lt; Back to Login" />
    </children>
</VBox>

