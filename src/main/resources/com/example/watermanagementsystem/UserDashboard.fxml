<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.watermanagementsystem.controllers.UserController">
    <children>
        <VBox prefHeight="600.0" prefWidth="800.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="50.0" style="-fx-background-color: #337ab7;">
                    <children>
                        <Label style="-fx-text-fill: white;" text="User Dashboard">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                            <HBox.margin>
                                <Insets left="20.0" />
                            </HBox.margin>
                        </Label>
                        <Label fx:id="welcomeLabel" style="-fx-text-fill: white;" text="Welcome, User!">
                            <HBox.margin>
                                <Insets left="30.0" />
                            </HBox.margin>
                        </Label>

                        <!-- spacer to push logout button to the right -->
                        <Region HBox.hgrow="ALWAYS" />

                        <!-- Logout button -->
                        <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogout" prefWidth="100.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-weight: bold;" text="Logout">
                            <HBox.margin>
                                <Insets right="20.0" />
                            </HBox.margin>
                        </Button>

                    </children>
                </HBox>
                <SplitPane dividerPositions="0.3" VBox.vgrow="ALWAYS">
                    <items>
                        <VBox prefWidth="200.0" spacing="20.0" style="-fx-padding: 15; -fx-background-color: #e6e6e6;">
                            <children>
                                <Label text="Submit Water Request">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Volume (Liters):" />
                                        <TextField fx:id="volumeField" promptText="e.g., 500.0" />
                                    </children>
                                </VBox>
                                <Button mnemonicParsing="false" onAction="#handleSubmitRequest" prefWidth="150.0" style="-fx-background-color: #5cb85c; -fx-text-fill: white;" text="Submit Request" />
                                <Label fx:id="statusMessageLabel" wrapText="true" />
                            </children>
                        </VBox>
                        <VBox spacing="10.0">
                            <children>
                                <Label text="My Request Status">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                    <VBox.margin>
                                        <Insets top="15.0" />
                                    </VBox.margin>
                                </Label>
                                <TableView fx:id="requestTable" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="idColumn" prefWidth="75.0" text="ID" />
                                        <TableColumn fx:id="volumeColumn" prefWidth="100.0" text="Volume (L)" />
                                        <TableColumn fx:id="dateColumn" prefWidth="180.0" text="Date Submitted" />
                                        <TableColumn fx:id="statusColumn" prefWidth="150.0" text="Status" />
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                </TableView>
                                <Button mnemonicParsing="false" onAction="#handleRefreshRequests" style="-fx-background-color: #0275d8; -fx-text-fill: white;" text="Refresh Requests" />
                            </children>
                            <padding>
                                <Insets left="15.0" right="15.0" />
                            </padding>
                        </VBox>
                    </items>
                </SplitPane>
            </children>
        </VBox>
    </children>
</AnchorPane>
