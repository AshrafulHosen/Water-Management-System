<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="900.0" style="-fx-background-color: #1e1e1e;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.watermanagementsystem.controllers.UserController">
    <children>
        <VBox prefHeight="600.0" prefWidth="800.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="50.0" style="-fx-background-color: #1f3a5f;">
                    <children>
                        <FontAwesomeIconView fill="WHITE" glyphName="USERS" size="20">
                            <HBox.margin>
                                <Insets left="20.0" />
                            </HBox.margin>
                        </FontAwesomeIconView>
                        <Label style="-fx-text-fill: #e0e0e0;" text="User Dashboard">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                            <HBox.margin>
                                <Insets left="10.0" />
                            </HBox.margin>
                        </Label>
                        <Label fx:id="welcomeLabel" style="-fx-text-fill: #b0b0b0;" text="Welcome, User!">
                            <HBox.margin>
                                <Insets left="30.0" />
                            </HBox.margin>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="logoutButton" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#handleLogout" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8;" text="Logout">
                            <graphic>
                                <FontAwesomeIconView fill="WHITE" glyphName="SIGN_OUT" size="16" />
                            </graphic>
                            <HBox.margin>
                                <Insets right="20.0" />
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
                <SplitPane dividerPositions="0.3" style="-fx-background-color: #1e1e1e;" VBox.vgrow="ALWAYS">
                    <items>
                        <VBox prefWidth="200.0" spacing="20.0" style="-fx-padding: 15; -fx-background-color: #2a2a2a;">
                            <children>
                                <Label style="-fx-text-fill: #e0e0e0;" text="Submit Water Request">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>
                                <VBox spacing="5.0">
                                    <children>
                                        <Label style="-fx-text-fill: #e0e0e0;" text="Volume (Liters):" />
                                        <TextField fx:id="volumeField" promptText="e.g., 500.0" style="-fx-control-inner-background: #3a3a3a; -fx-text-fill: #e0e0e0; -fx-prompt-text-fill: #888888;" />
                                    </children>
                                </VBox>
                                <Button contentDisplay="RIGHT" mnemonicParsing="false" onAction="#handleSubmitRequest" prefWidth="170.0" style="-fx-background-color: #198754; -fx-text-fill: white; -fx-padding: 10; -fx-border-radius: 4;" text="Submit Request">
                                    <graphic>
                                        <FontAwesomeIconView fill="WHITE" glyphName="SEND" size="14" />
                                    </graphic>
                                </Button>
                                <Label fx:id="statusMessageLabel" style="-fx-text-fill: #b0b0b0;" wrapText="true" />
                            </children>
                        </VBox>
                        <VBox spacing="10.0" style="-fx-background-color: #1e1e1e; -fx-padding: 15;">
                            <children>
                                <Label style="-fx-text-fill: #e0e0e0;" text="My Request Status">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>
                                <TableView fx:id="requestTable" style="-fx-background-color: #2a2a2a; -fx-control-inner-background: #2a2a2a; -fx-text-base: #e0e0e0;" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="idColumn" prefWidth="75.0" text="ID" />
                                        <TableColumn fx:id="volumeColumn" prefWidth="100.0" text="Volume (L)" />
                                        <TableColumn fx:id="dateColumn" prefWidth="180.0" text="Date Submitted" />
                                        <TableColumn fx:id="statusColumn" prefWidth="150.0" text="Status" />
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                </TableView>
                                <Button contentDisplay="RIGHT" mnemonicParsing="false" onAction="#handleRefreshRequests" style="-fx-background-color: #0d6efd; -fx-text-fill: white; -fx-padding: 10; -fx-border-radius: 4;" text="Refresh Requests">
                                    <graphic>
                                        <FontAwesomeIconView fill="WHITE" glyphName="REFRESH" size="14" />
                                    </graphic>
                                </Button>
                            </children>
                        </VBox>
                    </items>
                </SplitPane>
            </children>
        </VBox>
    </children>
</AnchorPane>
